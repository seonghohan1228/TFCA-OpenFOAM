FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 298;

boundaryField
{
    waterInlet
    {
        type            fixedValue;
        value			uniform 298;
    }
    airInlet
    {
        type            fixedValue;
        value			uniform 298;
    }
    outlet
    {
        type            zeroGradient;
    }
    freestream
    {
        type            zeroGradient;
    }
    walls
    {
        type            zeroGradient;
    }
    axis
    {
        type            empty;
    }
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
}

